

<h1>Solaritems</h1>

<table class="table table-ordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Brand</th>
      <th>Peak power</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @solaritems.each do |solaritem| %>
      <tr>
        <td><%= solaritem.name %></td>
        <td><%= solaritem.description %></td>
        <td><%= solaritem.brand %></td>
        <td><%= solaritem.peak_power %></td>
        <td class="btn-group">
          <%= link_to solaritem, class:"btn btn-primary"  do %>
          <i class="lni lni-sm lni-search"></i>
          <%end%>
          <%= link_to edit_solaritem_path(solaritem), class:"btn btn-info"  do %>
          <i class="lni lni-pencil"></i>
          <%end%>
          <%= link_to solaritem, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger"  do %>
          <i class="lni lni-trash"></i>
        <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Solaritem', new_solaritem_path, class:"btn-go " %>

