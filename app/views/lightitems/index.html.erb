  
<div class="container items-index">
  <h1 class="titulo-seccion">Productos Iluminaciòn</h1>



    <div class="row">
    <% @lightitems.each do |lightitem| %>

    <div class="col-md-12 card">
				<div class="media blog-media">
          <%= image_tag lightitem.photos.first.variant(resize:450), class:"d-flex img-fluid" %>
				  
				  <div class="card-body d-flex flex-column">
            
            <%=link_to lightitem.name, @lightitem_path , class:"titulo-producto"%>  
				    <div class="description_product"> <%=lightitem.description%></div>
				    <h5 class="titulo-spec">ESPECIFICACIONES</h5>
            <ul class="list-group list-group-flush item-lista">
				    	<li class="list-group-item "><i class="ri-check-double-line"></i> <strong>Marca : </strong> <%= lightitem.brand%></li>
              <li class="list-group-item"><i class="ri-check-double-line"></i> <strong>Potencia : </strong> <%= lightitem.power%> Watts</li>
				    	<li class="list-group-item"><i class="ri-check-double-line"></i> <strong>Flux : </strong> <%= lightitem.flux%> F.</li>
              <li class="list-group-item"><i class="ri-check-double-line"></i> <strong>Voltaje : </strong> <%= lightitem.voltage%> V.</li>
              <li class="list-group-item"><i class="ri-check-double-line"></i> <strong>Vida Ùtil : </strong> <%= lightitem.useful_life%> Años</li>
              <li class="list-group-item"><i class="ri-check-double-line"></i> <strong>Protecciòn IP : </strong> <%= lightitem.ip_protection%> F.</li>
              <li class="list-group-item"><i class="ri-check-double-line"></i> <strong>Temperatura de color : </strong> <%= lightitem.color_temp%> C.</li>
              <li class="list-group-item"><i class="ri-check-double-line"></i> <strong>Adicionales : </strong> <%= lightitem.additionals%> F.</li>
				    </ul>
            <div class="row">

              <% if signed_in?%>
                <div class="ml-5 mt-3 text-danger">
                  <span> <strong>Estado: </strong> </span> <span><%= lightitem.status%></span> 
                </div>
                <div class="btn-group ml-auto">
                  <%= link_to lightitem, class:"btn btn-primary"  do %>
                  <i class="lni lni-sm lni-search"></i>
                  <%end%>
                  <%= link_to edit_lightitem_path(lightitem), class:"btn btn-info"  do %>
                    <i class="lni lni-pencil"></i>
                  <%end%>
                  <%= link_to lightitem, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger"  do %>
                    <i class="lni lni-trash"></i>
                  <%end%>
                </div>
              <%else%>
              <%= link_to "Ver Producto", lightitem, class:"btn btn-ver ml-auto" %>
              <%end%>
              
            </div>
				  </div>
				</div>
		</div>
    <% end %>
  </div>
 <%= paginate @lightitems ,class:"ml-auto"%>

<br>
<% if signed_in?%>
<%= link_to 'Crear Producto', new_lightitem_path, class:"btn-go my-4 " %>
<%end%>
</div>
