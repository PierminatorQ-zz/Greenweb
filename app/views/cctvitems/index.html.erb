

<h1>Cctvitems</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Brand</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cctvitems.each do |cctvitem| %>
      <tr>
        <td><%= cctvitem.name %></td>
        <td><%= cctvitem.description %></td>
        <td><%= cctvitem.brand %></td>
        <td class="btn-group">
          <%= link_to cctvitem, class:"btn btn-primary"  do %>
          <i class="lni lni-sm lni-search"></i>
          <%end%>
          <%= link_to edit_cctvitem_path(cctvitem), class:"btn btn-info"  do %>
          <i class="lni lni-pencil"></i>
          <%end%>
          <%= link_to cctvitem, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger"  do %>
          <i class="lni lni-trash"></i>
        <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cctvitem', new_cctvitem_path, class:"btn-go " %>

