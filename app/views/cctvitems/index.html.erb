<p id="notice"><%= notice %></p>

<h1>Cctvitems</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Brand</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cctvitems.each do |cctvitem| %>
      <tr>
        <td><%= cctvitem.name %></td>
        <td><%= cctvitem.description %></td>
        <td><%= cctvitem.brand %></td>
        <td><%= link_to 'Show', cctvitem %></td>
        <td><%= link_to 'Edit', edit_cctvitem_path(cctvitem) %></td>
        <td><%= link_to 'Destroy', cctvitem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

